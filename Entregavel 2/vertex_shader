#version 330 core

layout (location = 0) in vec3 aPos;   // posição dos vértices
layout (location = 1) in vec3 aColor; // cor (R,G,B)

uniform mat4 uMVP; // Matriz de Modelagem * Visualização * Projeção

out vec3 vColor; 

void main()
{
    gl_Position = uMVP * vec4(aPos, 1.0);
    vColor = aColor;
}
