#version 330 core

out vec4 FragColor;

in vec2 TexCoord;
in vec3 VertexColor;

uniform sampler2D texture1;
uniform int controle; // 0 = só cor, 1 = mistura com textura

void main()
{
    vec4 texColor = texture(texture1, TexCoord);

    if (controle == 0)
    {
        // Apenas cor dos vértices
        FragColor = vec4(VertexColor, 1.0);
    }
    else
    {
        // Mistura cor com textura
        FragColor = vec4(VertexColor, 1.0) * texColor;
    }
}
